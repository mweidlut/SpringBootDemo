<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %date{HH:mm:ss.SSS} | %highlight(%-5level) | %green(%thread) | %cyan(%logger{36}) | %msg%n
                <!--%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n-->
            </pattern>
        </encoder>
    </appender>

    <!-- project default level -->
    <logger name="com.test.web" level="INFO" />

    <root level="INFO">
        <appender-ref ref="console" />
    </root>
</configuration>